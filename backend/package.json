        "nestjs-pino": "^3.5.0",
        "otpauth": "^9.1.5",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "passport-unique-token": "^3.0.0",
        "pino-http": "^8.5.0",
        "pino-pretty": "^10.2.3",
